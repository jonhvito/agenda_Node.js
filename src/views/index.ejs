<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container col-md-auto ">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3 ">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos estão abaixo</p>

      <%- include('includes/messages') %>

      <% if(contatos.length > 0) { %>
      <div class="responsive-table ">
        <table class="table my-3 text-white  ">
          <% contatos.forEach(contato => { %>
          <tr  >
            <td class="col-md-auto"><%= contato.nome %></td>
            <td class="col-md-auto"><%= contato.sobrenome %></td>
            <td class="col-md-auto"><%= contato.telefone %></td>
            <td class="col-md-auto"><%= contato.email %></td>
            <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
            <td><a class="text-danger" href="/contato/delete/<%= contato._id %>" onclick="return confirm('Tem certeza de que deseja excluir este contato?')">Excluir</a></td>
  
            
          </tr>
          <% }); %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">Não existem contatos na sua agenda.</p>
      <% } %>

    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
